{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["public/**/*", "build/**/*", "dist/**/*", "*-legacy/**/*"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noGlobalIsNan": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noChildrenProp": "error",
        "noPrecisionLoss": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "nursery": {
        "useGroupedTypeImport": "warn",
        "noDuplicateJsonKeys": "error"
      },
      "a11y": {
        "noSvgWithoutTitle": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useTemplate": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 120,
      "indentWidth": 2,
      "indentStyle": "space",
      "trailingComma": "all",
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
